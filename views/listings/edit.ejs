<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Edit</h3>
    <form 
    method="POST" 
    action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation"
    >
 <div class="mb-3"> 
        <label for="title" class="form-label">Title</label>
        <input 
        value="<%= listing.title %>" 
        name="listing[title]" 
        type="text" 
        placeholder="enter title"
        class="form-control"
        required/>
        <div class="valid-feedback">Title looks good!</div>
 </div>
 <div class="mb-4"> 
        <label for="description" class="form-label">Description</label>
        <textarea 
        name="listing[description]" 
        placeholder="enter description"
        class="form-control"
        required>
        <%= listing.description%>
        </textarea>
        <div class="valid-feedback">Please enter a short description</div>
 </div>
 <div class="mb-3"> 
          <input 
          value="<%= listing.price %>" 
          name="listing[price]" 
          placeholder="enter price" 
          type="number"
          class="form-control"
          required>
          <div class="valid-feedback">Price should be valid</div>
 </div>
 <div class="mb-3"> 
    <label for="country" class="form-label">country</label>
          <input 
          value="<%= listing.country %>" 
          name="listing[country]" 
          type="text"
          placeholder="enter country"
          class="form-control"
          required/>
          <div class="valid-feedback">Country name should be valid</div>
 </div>
 <div class="mb-3"> 
       <label for="image" class="form-label">image</label>
             <input 
             value="<%= listing.image %>" 
             name="listing[image]" 
             type="text"
             placeholder="enter new url"
             class="form-control"
             required/>
             <div class="valid-feedback">url should be valid</div>
    </div>
 <div class="mb-3"> 
    <label for="location" class="form-label">location</label>
          <input 
          value="<%= listing.location %>" 
          name="listing[location]" 
          placeholder="enter location" 
          type="text"
          class="form-control"
          required/>
          <div class="valid-feedback">Location should be valid</div>
 </div>
 <button class="edit-btn mt-3">Edit</button>
        </form>
</div>
</div>